{
    "manifest_version": 2,
    "name": "Extension",
    "description": "A basic browser extension with enhanced features.",
    "version": "0.3.2",
    "author": "Your Name",
    "update_url": "https://your-deployment-url.com/updates.xml",
    "permissions": ["tabs", "storage"],
    "browser_action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "background": {
      "scripts": ["scripts/background.js"],
      "persistent": false
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }]
  }